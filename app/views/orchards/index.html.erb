<h1>Listing orchards</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Area</th>
    <th>Longitude</th>
    <th>Latitude</th>
    <th>Used</th>
  </tr>

<% @orchards.each do |orchard| %>
  <tr>
    <td><%=h orchard.name %></td>
    <td><%=h orchard.area %></td>
    <td><%=h orchard.longitude %></td>
    <td><%=h orchard.latitude %></td>
    <td><%=h orchard.used %></td>
    <td><%= link_to 'Show', orchard %></td>
    <td><%= link_to 'Edit', edit_orchard_path(orchard) %></td>
    <td><%= link_to 'Borrar', orchard, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New orchard', new_orchard_path %>