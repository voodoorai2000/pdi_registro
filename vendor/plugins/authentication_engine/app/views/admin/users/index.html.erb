<% title "Usuarios" %>
<%# render :partial => 'admin/shared/restful_links', :object => @user %>

<table class="users">
  <tr>
    <th>Nombre</th>
    <th>Email</th>
    <th>Áreas de Colaboración</th>
    <th>Información</th>
    <th>Ultimo Login</th>
    <th></th>
  </tr>
<%- for user in @users -%>
  <tr id="user_<%= user.id %>">
    <td class="user_icon"><%= link_to user.name, admin_user_path(user) %></td>
    <td><%=h user.email %></td>
    <td><%=h user.areas.map(&:name).join(", ") %></td>
    <td><%=h user.more_info %></td>
    <td><%=h user.last_login_at %></td>
    <td><%= link_to "borrar", admin_user_path(user), :method => :delete, :confirm => "¿Seguro que quieres borrar a este usuario?" %></td>
  </tr>
<%- end -%>
</table>

<%- if REGISTRATION[:limited] -%>
<p>
  <%= link_to "Nueva Cuenta", new_admin_user_path %>
</p>
<%- end -%>
